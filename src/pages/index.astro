---
import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/Footer.astro";
import Forside1 from "../components/Forside1.astro";
import Forside2 from "../components/Forside2.astro";
import Forside3 from "../components/Forside3.astro";
---

<MainLayout title="FRONT PAGE">
  <div class="slideshow">
    <button class="prev" onclick="prevSlide()">&#10094;</button>
    <div class="slide"><Forside1 /></div>
    <div class="slide"><Forside2 /></div>
    <div class="slide"><Forside3 /></div>
    <button class="next" onclick="nextSlide()">&#10095;</button>
    <div class="circleContainer">
      <div class="circle circle0 activeCircle"></div>
      <div class="circle circle1"></div>
      <div class="circle circle2"></div>
    </div>
  </div>
  <Footer />
</MainLayout>

<script>
  //carousel
  document.addEventListener("DOMContentLoaded", () => {
    const slides = document.querySelectorAll(".slide");
    let currentSlide = 0;

    //
    setInterval(sliderTimer, 6000);

    function sliderTimer() {
      nextSlide();
    }

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.toggle("active", i === index);
      });
    }

    function nextSlide() {
      currentSlide = (currentSlide + 1) % slides.length;
      showSlide(currentSlide);

      let all = document.querySelectorAll(".circle");

      all.forEach((single) => {
        single.classList.remove("activeCircle");
      });

      let circlenumber = document.querySelector(`.circle${currentSlide}`);
      circlenumber.classList.add("activeCircle");
    }

    function prevSlide() {
      currentSlide = (currentSlide - 1 + slides.length) % slides.length;
      showSlide(currentSlide);
    }

    // start med f√∏rste slide
    showSlide(currentSlide);

    //
    window.nextSlide = nextSlide;
    window.prevSlide = prevSlide;
  });
</script>

<style>
  .circleContainer {
    display: flex;
    justify-content: center;
    position: relative;
    top: -60px;
    gap: 1.5rem;
  }
  .circle {
    width: 10px;
    height: 0px;
    border-radius: 50%;
    background-color: white;
  }
  .activeCircle {
    background-color: black;
  }
  /* carousel */
  .slidehow {
    width: 80%;
    max-width: 600px;
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .slide {
    display: none;
    width: 100%;
    height: 100%;
  }

  .slide.active {
    display: block;
  }

  /* knap */

  button {
    background-color: transparent;
    border: none;
    color: white;
    padding: 10px;
    cursor: pointer;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 50px;
    z-index: 1;
    user-select: none;
  }

  button.prev {
    left: 5%;
  }

  button.next {
    right: 5%;
  }

  button:hover {
    color: #ab1f27;
    transition: 0.1s;
  }
</style>
