---
const { data } = Astro.props;
import MainLayout from "../layouts/MainLayout.astro";
---

<!-- Gør så der bliver hentet items fra den valgte kategori -->
<article class={`grid-item ${data.category}`} data-category={data.category}>
  <!-- Billede fra databasen og info om produkter -->
  <a href={`/products/${data.slug}`}>
    <img class="image" src={data.image_front} />
    <img class="image2" src={data.image_person} />
  </a>

  <!-- "tekstfelt" der skal ligge over billederne på mobil -->
  <div class="info">
    <a href={`/products/${data.slug}`}>
      <h3>{data.name}</h3>
    </a>
    <h3>{data.price} DKK</h3>
    <button type="button" name="btn">
      <a class="knap" href="/cart">
        <p>ADD TO CART</p>
      </a>
    </button>
  </div>
</article>

<style>
  /* billeder  */
  .image2 {
    display: none;
  }

  /* knap */

  .knap:hover {
    text-decoration: none;
  }

  .knap {
    text-decoration: none;
  }
  button {
    font-family: Avenir Next;
    color: #ffffff;
    font-size: 15px;
    border: none;
    padding-left: 5%;
    padding-right: 5%;
    cursor: pointer;
    text-decoration: none;
    background-color: #ab1f27;
  }

  button p {
    color: white;
  }

  button p:hover {
    color: black;
  }

  /* tekst - brand, pris  */
  .info {
    width: 100%;
    position: absolute;
    bottom: 0;
    /* height: 100%; */
    background-color: #d9d9d97d;
    padding-left: 10px;
    padding-bottom: 10px;
    padding-top: 10px;
    /* margin-top: -70px; */
  }

  h3 {
    font-size: 10px;
    font-family: Avenir Next;
    font-weight: 400;
    padding:;
  }

  .info a {
    color: black;
    text-decoration: none;
  }

  /* selve kortet som vises på "all items" */
  .grid-item {
    position: relative;
    outline: 5px solid #ab1f27;
    display: flex;
    flex-direction: column;
  }

  /* billeder */

  .image {
    width: 100%;
    height: auto;
  }

  @media screen and (min-width: 800px) {
    /* knap */
    .knap {
      padding-bottom: -50px;
    }

    /* tekst */

    .info {
      display: none;
    }
    h3 {
      font-size: 15px;
    }

    /* billeder */

    .image {
      display: block;
      object-fit: cover;
    }

    .grid-item:hover .info {
      display: block;
      margin-top: -150px;
    }

    .grid-item:hover .image {
      display: none;
    }

    .grid-item:hover .image2 {
      display: block;
      width: 100%;
    }
  }
</style>
