---
const { data } = Astro.props;
import MainLayout from "../layouts/MainLayout.astro";
---

<!-- Gør så der bliver hentet items fra den valgte kategori -->
<article class={`grid-item ${data.category}`} data-category={data.category}>
  <!-- Billede fra databasen og info om produkter -->
  <a href={`/products/${data.slug}`}>
    <img class="image" src={data.image_front} />
    <img class="image2" src={data.image_person} />
  </a>

  <!-- "tekstfelt" der skal ligge over billederne på mobil -->
  <div class="info">
    <a href={`/products/${data.slug}`}>
      <h3>{data.name}</h3>
    </a>
    <h3>{data.price} DKK</h3>
    <button type="button" name="btn">
      <a class="knap" href="/cart">
        <p>ADD TO CART</p>
      </a>
    </button>
  </div>
</article>

<style>
  .image2 {
    display: none;
  }
  /* knap */

  .knap {
    text-decoration: none;
  }
  button {
    font-family: Avenir Next;
    color: #ffffff;
    font-size: 15px;
    border: none;
    padding-left: 5%;
    padding-right: 5%;
    cursor: pointer;
    text-decoration: none;
    background-color: #ab1f27;
  }

  button p {
    color: white;
  }

  button:hover {
    color: black;
  }
  button:hover p {
    color: white;
  }
  /* id til javascript */
  .hide {
    display: none;
  }
  /* tekst - brand, pris  */
  .info {
    width: 100%;
    height: 100%;
    background-color: #d9d9d97d;
    padding-left: 10px;
    padding-bottom: 10px;
    margin-top: -100px;
  }

  /* stil for prisen */
  /* stil for mærket */
  h3 {
    font-size: 10px;
    font-family: Avenir Next;
    font-weight: 400;
    padding:;
  }
  .grid-item {
    outline: 5px solid #ab1f27;
    display: flex;
    flex-direction: column;
    align-items: center; /* Centerer indholdet vandret */
    justify-content: space-between; /* Fordeler pladsen jævnt mellem elementerne */
    /* margin-left: -8px;
    margin-right: -8px; */
  }

  /* styling for billeder */

  .image {
    width: 100%;
    height: auto;
  }
  .knap:hover {
    text-decoration: none;
  }

  .info a {
    color: black;
    text-decoration: none;
  }

  @media screen and (min-width: 800px) {
    h3 {
      font-size: 15px;
    }
    .image {
      display: block;
      object-fit: cover;
    }

    .info {
      display: none;
    }

    .grid-item:hover .info {
      display: block;
      margin-top: -150px;
    }

    .grid-item:hover .image {
      display: none;
    }

    .grid-item:hover .image2 {
      display: block;
      width: 100%;
    }
  }
</style>
